@model IEnumerable<DataLayer.Models.Blog>
@using MyprojectCMS.Utilities
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ImageName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BlogGroup.GroupTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShortDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Visite)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreateDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        <img src="~/Images/@item.ImageName" class="thumbnail" style="width : 100px; height:100px;"/>
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.BlogGroup.GroupTitle)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Title)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ShortDescription)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Visite)
    </td>
    <td>
        @item.CreateDate.ConvertToShamsi()
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.BlogId }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.BlogId })
    </td>
</tr>
}

</table>
